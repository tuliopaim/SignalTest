@model IEnumerable<SignalTest.Domain.DTOs.TweetDto>
@{
    ViewData["Title"] = "Chat";
}

<style>

    #tweets-container {
        max-height: 60vh;
        overflow-y: scroll;
    }

    .data-tweet {
        font-size: 0.8em;
        text-align: right;
    }

</style>

<div class="container">
    <div class="row">&nbsp;</div>
    <div class="form-group">
        <label for="messageInput">Escreva</label>
        <textarea type="text" id="messageInput" maxlength="280" class="form-control"></textarea>
    </div>
    <input type="button" id="sendButton" class="btn btn-primary" value="Tweetar" />
    
    <hr class="my-3"/>

    <div class="row">
        <div id="tweets-container" class="col-12">
            <ul id="messagesList" class="list-group list-group-flush"></ul>
            @foreach (var tweet in Model)
            {
                <li class="list-group-item">
                    <b>@tweet.NomeUsuario</b><br/>
                    @tweet.Mensagem <br/>
                    <span class="data-tweet"> @tweet.DataStr </span>
                </li>
            }
        </div>
    </div>
</div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/tweet.js"></script>